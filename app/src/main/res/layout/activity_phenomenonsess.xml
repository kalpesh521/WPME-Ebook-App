<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgorange"
    tools:context=".phenomenonsess">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="374dp"
        android:layout_height="400dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="4dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:gravity="center|top"
            android:scrollbarStyle="outsideInset">

            <TextView
                android:id="@+id/txtpart"
                android:layout_width="343dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:scrollbarStyle="insideInset"
                android:text="COMMON PHENOMENON      AND CHARACRERISTICS"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"></TextView>


            <TextView
                android:layout_width="334dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txtpart"
                android:layout_marginTop="4dp"
                android:gravity="left"
                android:text="      Select Session"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"></TextView>
        </RelativeLayout>

        <GridLayout
            android:id="@+id/mainGridLayout"
            android:layout_width="match_parent"
            android:layout_height="744dp"
            android:alignmentMode="alignMargins"
            android:columnCount="1"
            android:columnOrderPreserved="false"
            android:rowCount="4">


            <androidx.cardview.widget.CardView
                android:id="@+id/sesone"
                android:layout_width="360dp"
                android:layout_height="90dp"
                android:layout_row="1"
                android:layout_rowWeight=" 0"

                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"

                android:background="@drawable/borderblack"

                android:clickable="true"
                app:cardCornerRadius="25dp"
                app:cardElevation="15dp"

                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/borderblack"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="start"
                        android:rotationX="-3"
                        android:scrollbarStyle="outsideInset">


                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/thirtynine" />

                        <TextView
                            android:id="@+id/one"
                            android:layout_width="236dp"
                            android:layout_height="65dp"
                            android:layout_marginStart="100dp"
                            android:background="@drawable/bordertwo"
                            android:gravity="center"
                            android:scrollbarStyle="insideInset"
                            android:text="Session Thirty-Nine"
                            android:textColor="#000000"
                            android:textSize="24sp"
                            android:textStyle="bold"></TextView>


                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/sestwo"
                android:layout_width="360dp"
                android:layout_height="90dp"
                android:layout_row="1"
                android:layout_rowWeight=" 0"

                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:layout_marginTop="115dp"

                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="25dp"
                app:cardElevation="15dp"

                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/borderblack"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="start"
                        android:rotationX="-3"
                        android:scrollbarStyle="outsideInset">


                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/fourty" />

                        <TextView
                            android:id="@+id/what"
                            android:layout_width="236dp"
                            android:layout_height="65dp"
                            android:layout_marginStart="100dp"
                            android:background="@drawable/bordertwo"
                            android:gravity="center"
                            android:scrollbarStyle="insideInset"
                            android:text="Session Fourty "
                            android:textColor="#000000"
                            android:textSize="24sp"
                            android:textStyle="bold"></TextView>

                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/sesthree"
                android:layout_width="360dp"
                android:layout_height="90dp"
                android:layout_row="1"
                android:layout_rowWeight=" 0"

                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:layout_marginTop="225dp"

                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="25dp"
                app:cardElevation="15dp"

                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/borderblack"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="start"
                        android:rotationX="-3"
                        android:scrollbarStyle="outsideInset">


                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="100dp"
                            android:layout_height="65dp"
                            app:srcCompat="@drawable/fourtyone" />

                        <TextView
                            android:id="@+id/characteristics"
                            android:layout_width="236dp"
                            android:layout_height="65dp"
                            android:layout_marginStart="100dp"
                            android:background="@drawable/bordertwo"
                            android:gravity="center"
                            android:scrollbarStyle="insideInset"
                            android:text="Session Fourty-one "
                            android:textColor="#000000"
                            android:textSize="24sp"
                            android:textStyle="bold"></TextView>

                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </GridLayout>


    </LinearLayout>

</ScrollView>



